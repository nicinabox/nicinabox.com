ErrorDocument 404 /404.html

<IfModule mod_rewrite.c>
  Options +FollowSymlinks
  RewriteEngine On
</IfModule>

<IfModule mod_rewrite.c>
  RewriteCond %{HTTPS} !=on
  RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
  RewriteRule ^ http://%1%{REQUEST_URI} [R=301,L]
</IfModule>

# Fix old permalinks

RewriteRule (.*blog\/)(\d{4}\/\d{2}\/\d{2}\/)(.*) $1$3 [R=301,L]